<h1>Books#edit</h1>

<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Image</h4>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像",accept: "image/*" %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
  <% end %>
  <%= link_to 'show', book_path(@book.id) %>
  <%= link_to 'back' , books_path %>
