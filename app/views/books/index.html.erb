<h1>Books#index</h1>
 <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

<% @books.each do |book| %>
<div>
  <%= image_tag book.user.get_profile_image %>
  <%= link_to book_path(book.id) do %>
  <p><%= book.title %></p>
  <%end%>

  <p><%= book.body %></p>

</div>
<% end %>

