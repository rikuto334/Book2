<h1>Books#index</h1>
<% @books.each do |book| %>
<div>
  <%= image_tag book.user.get_profile_image %>
  <%= link_to books_path(book.id) do %>
  <p><%= book.title %></p>
  <%end%>

  <p><%= book.body %></p>

</div>
<% end %>

<h1>New book</h1>

 <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
