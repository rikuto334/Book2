<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>




       <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
      <% end %>

      <% if user_signed_in?  %>
        <li>
          <%= link_to "Home", user_path(current_user.id), method: :get %>
        </li>
        <li>
          <%= link_to "Users", users_path, method: :get %>
        </li>
        <li>
          <%= link_to "Books", books_path, method: :get %>
        </li>
        <li>
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>

      <%else%>
      <li>
          <%= link_to "Home", '/', method: :get %>
        </li>
        <li>
          <%= link_to "About",'/homes/about', method: :get %>
        </li>
        <li>
          <%= link_to "Sign Up", new_user_registration_path %>

        </li>
        <li>
          <%= link_to "Log in", new_user_session_path %>
        </li>
      <%end%>
    </header>
    <% if user_signed_in?  %>
      <h2>User info</h2>
        <div>
          <p><%= image_tag current_user.get_profile_image %></p>

          <p>name    <%=current_user.name  %></p>
          <p>introduction     <%=current_user.introduction  %></p>
          <p><%= link_to 'User_edit',edit_user_path(current_user.id)  %></p>

        </div>

          <h1>New book</h1>

       <%= form_with model: @book do |f| %>

          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
       <% end %>
    <%end%>

    <%= yield %>
  </body>
</html>
